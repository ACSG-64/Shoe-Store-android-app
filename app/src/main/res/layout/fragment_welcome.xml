<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.udacity.shoestore.views.WelcomeFragment">

    <data></data>

    <!--
     I used LinearLayout since all views are arranged one below the other and each one completely fills the screen from right to left.
     -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_bold"
            android:gravity="center"
            android:text="Welcome!"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/shoe_icon" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pease, read the instructions before to start"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_toInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions" />
    </LinearLayout>
</layout>


